---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
	firstName: "Luna",
	country: "Spain",
	dogNames: ["Leo", "Loki"],
};

const skills = ["HTML", "CSS", "JavaScript"];

const happy = true;
const finished = true;
const goal = 1;

const skillColor = "green";
---

<BaseLayout pageTitle={pageTitle}>
	<style define:vars={{ skillColor }}>
		h1 {
			color: purple;
			font-size: 4rem;
		}
		.skill {
			color: var(--skillColor);
			font-weight: bold;
		}
	</style>

	<h2>{identity.firstName} Wolff</h2>
	<p>
		Lives in {identity.country}. I have two dogs names {
			identity.dogNames[0]
		} and {identity.dogNames[1]}.
	</p>
	<p>My skills include:</p>
	<ul>
		{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>

	{happy && <p>I am happy to be learning Astro!</p>}

	{finished && <p>I finished this tutorial!</p>}

	{
		goal === 1 ? (
			<p>My goal is to finish in 1 days.</p>
		) : (
			<p>My goal is not 1 days.</p>
		)
	}
</BaseLayout>
